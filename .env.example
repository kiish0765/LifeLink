# LifeLink Environment Variables
# Copy to .env and fill in values

# Server
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# PostgreSQL (transactional / medical records)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lifelink
POSTGRES_PASSWORD=lifelink_secret
POSTGRES_DB=lifelink

# MongoDB (activity logs, notification logs)
MONGODB_URI=mongodb://localhost:27017/lifelink

# Redis (caching, online status, fast matching)
REDIS_URL=redis://localhost:6379
REDIS_PRESENCE_TTL=300

# WebSocket
WS_PATH=/ws

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=LifeLink <noreply@lifelink.app>

# SMS (Twilio or similar)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Frontend URL (for links in emails)
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Donation rules
MIN_DONATION_INTERVAL_DAYS=90
MAX_DONOR_AGE=65
MIN_DONOR_AGE=18
